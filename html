    <script>
        let envelopeOpened = false;
        let animationInProgress = false;
        
        function openEnvelope() {
            if (envelopeOpened || animationInProgress) return;
            
            const envelope = document.getElementById('envelope');
            const acceptanceSection = document.getElementById('acceptanceSection');
            const whatsappButton = document.getElementById('whatsappButton');
            
            if (!envelope || !acceptanceSection || !whatsappButton) {
                console.error('Elementos essenciais não encontrados');
                return;
            }
            
            animationInProgress = true;
            envelopeOpened = true;
            
            // Animação de sucesso no envelope
            envelope.classList.add('success-pulse');
            envelope.classList.add('opened');
            
            // Vibração no dispositivo móvel
            if (navigator.vibrate) {
                navigator.vibrate([200, 100, 200]);
            }
            
            // Efeitos visuais
            setTimeout(() => {
                createCelebrationEffects();
                createSparkleExplosion();
            }, 1000);
            
            // Mostrar seção de aceitação
            setTimeout(() => {
                acceptanceSection.style.opacity = '1';
                acceptanceSection.style.transform = 'translateY(0)';
            }, 4000);
            
            // Mostrar botão WhatsApp
            setTimeout(() => {
                whatsappButton.classList.add('visible');
                animationInProgress = false;
            }, 4500);
            
            // Remover animação de pulso
            setTimeout(() => {
                envelope.classList.remove('success-pulse');
            }, 1000);
        }
        
        function createCelebrationEffects() {
            const colors = ['#d4af37', '#f4d03f', '#8b4513', '#25d366', '#ff6b6b'];
            const effectCount = 50;
            
            for (let i = 0; i < effectCount; i++) {
                setTimeout(() => {
                    try {
                        const effect = document.createElement('div');
                        effect.className = 'celebration-effect';
                        const color = colors[Math.floor(Math.random() * colors.length)];
                        effect.style.background = color;
                        effect.style.left = (30 + Math.random() * 40) + '%';
                        effect.style.top = (20 + Math.random() * 60) + '%';
                        effect.style.boxShadow = `0 0 15px ${color}`;
                        
                        document.body.appendChild(effect);
                        
                        setTimeout(() => {
                            if (effect && effect.parentNode) {
                                effect.parentNode.removeChild(effect);
                            }
                        }, 5500);
                    } catch (error) {
                        console.log('Erro na criação do efeito de celebração:', error);
                    }
                }, i * 100);
            }
        }
        
        function createSparkleExplosion() {
            const sparkleCount = 30;
            
            for (let i = 0; i < sparkleCount; i++) {
                setTimeout(() => {
                    try {
                        const sparkle = document.createElement('div');
                        sparkle.className = 'sparkle';
                        sparkle.style.left = (25 + Math.random() * 50) + '%';
                        sparkle.style.top = (15 + Math.random() * 70) + '%';
                        sparkle.style.animationDelay = Math.random() * 1 + 's';
                        
                        document.body.appendChild(sparkle);
                        
                        setTimeout(() => {
                            if (sparkle && sparkle.parentNode) {
                                sparkle.parentNode.removeChild(sparkle);
                            }
                        }, 3500);
                    } catch (error) {
                        console.log('Erro na criação do sparkle:', error);
                    }
                }, i * 150);
            }
        }
        
        function createFloatingParticle() {
            const particlesContainer = document.getElementById('particlesContainer');
            if (!particlesContainer) return;
            
            try {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 3 + 's';
                particle.style.animationDuration = (8 + Math.random() * 4) + 's';
                
                particlesContainer.appendChild(particle);
                
                setTimeout(() => {
                    if (particle && particle.parentNode) {
                        particle.parentNode.removeChild(particle);
                    }
                }, 12500);
            } catch (error) {
                console.log('Erro na criação da partícula:', error);
            }
        }
        
        // Inicialização quando a página carrega
        document.addEventListener('DOMContentLoaded', function() {
            // Criar partículas flutuantes periodicamente
            setInterval(createFloatingParticle, 800);
            
            // Otimizações para dispositivos móveis
            document.addEventListener('touchstart', function() {}, {passive: true});
            
            // Prevenir zoom duplo toque
            let lastTouchEnd = 0;
            document.addEventListener('touchend', function (event) {
                const now = (new Date()).getTime();
                if (now - lastTouchEnd <= 300) {
                    event.preventDefault();
                }
                lastTouchEnd = now;
            }, false);
            
            // Prevenir seleção de texto em dispositivos móveis
            document.addEventListener('selectstart', function(e) {
                if (e.target.tagName !== 'INPUT' && e.target.tagName !== 'TEXTAREA') {
                    e.preventDefault();
                }
            });
            
            // Melhorar performance em dispositivos mais lentos
            const isLowEndDevice = navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 2;
            if (isLowEndDevice) {
                // Reduzir efeitos em dispositivos menos potentes
                const style = document.createElement('style');
                style.textContent = `
                    .particle { animation-duration: 15s !important; }
                    .celebration-effect { animation-duration: 3s !important; }
                `;
                document.head.appendChild(style);
            }
        });
        
        // Função para otimizar performance
        function throttle(func, limit) {
            let inThrottle;
            return function() {
                const args = arguments;
                const context = this;
                if (!inThrottle) {
                    func.apply(context, args);
                    inThrottle = true;
                    setTimeout(() => inThrottle = false, limit);
                }
            }
        }
        
        // Limpar recursos quando a página é fechada
        window.addEventListener('beforeunload', function() {
            // Limpar intervalos e timeouts se necessário
            const particles = document.querySelectorAll('.particle, .celebration-effect, .sparkle');
            particles.forEach(particle => {
                if (particle && particle.parentNode) {
                    particle.parentNode.removeChild(particle);
                }
            });
        });
    </script>
